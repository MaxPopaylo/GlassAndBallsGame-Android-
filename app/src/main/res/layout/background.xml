            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_cloud"
            android:layout_marginStart="60dp"
            android:layout_gravity="start"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
