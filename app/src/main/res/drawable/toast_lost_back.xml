<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <solid android:color="@android:color/darker_gray" />
            <corners
                android:radius="22dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <gradient
